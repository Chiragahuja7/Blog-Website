<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<section class="articles container my-4">
  <div class="d-flex justify-content-between align-items-center mb-4 ms-2">
    <h2 class="articles__heading mb-0 me-2">Latest Posts</h2>
    <% if (!user) { %>
  <a href="/login" class="btn-outline-secondary"><img src=/log-in.png alt="login" title="login">Login</a>
  <% } else { %>
  <a href="/logout" class="btn-danger ms-2"><img src=/icons8-power-button-64.png alt="logout"></a>
  <!-- <span class="fs-4 me-2">Welcome, <%= user.firstname %>!</span> -->
  <% } %>
  </div>
  <div class="row g-4">
    <% data.forEach(post => { %>
      <% if (post.status === "approved") { %>
      <div class="col-md-4">
        <div class="card h-100 shadow-sm blog-card">
         <% if (post.image) { %>
           <% if (Array.isArray(post.image)) { %>
             <img src="<%= post.image[0] %>" alt="Blog image" 
                  class="card-img-top mb-2"
                  style="max-height: 180px; object-fit: cover;">
           <% } else { %>
             <img src="<%= post.image %>" alt="Blog image" 
                  class="card-img-top mb-2"
                  style="max-height: 180px; object-fit: cover;">
           <% } %>
         <% } %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-semibold"><%= post.title %></h5>
            <p class="card-text">
              <%- post.body.split(" ").slice(0, 30).join(" ") %>...
            </p>
            <p class="card-text text-muted mb-2 mt-auto">
              <small><%= post.createdAt.toDateString() %></small>
            </p>
             <a href="/post/<%= post._id %>" class="stretched-link"></a>
          </div>
        </div>
      </div>
    <% }}) %>
  </div>
  <a href="/editor" class="btn btn-primary">Editor</a>
<div class="text-center mt-4">
  <% if (prevPage !== null) { %>
    <a href="/?page=<%= prevPage %>" class="btn btn-primary me-2">
      &lt; Newer Posts
    </a>
  <% } %>

  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="btn btn-primary">
      Older Posts &gt;
    </a>
  <% } %>
</div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
