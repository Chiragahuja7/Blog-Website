<div class="author">
    <h1 class="author__heading">Search Results</h1>
</div>

<section class="articles">
    <ul class="article-ul">
<div class="row g-4">
  <% data.forEach(post => { %>
    <a href="/post/<%= post._id %>" class="col-md-4 text-decoration-none">
      <div class="card h-100 shadow-sm blog-card">
        <% if (post.image) { %>
          <img src="<%= post.image %>" alt="Blog image" 
               class="card-img-top" 
               style="max-height: 200px; object-fit: cover;">
        <% } %>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text">
            <%= post.body.split(" ").slice(0, 30).join(" ") %>...
          </p>
          <p class="card-text text-muted mb-2">
            <small><%= post.createdAt.toDateString() %></small>
          </p>

           <a href="/post/<%= post._id %>" class="stretched-link"></a>
        </div>
      </div>
    </a>
  <% }) %>
</div>

</section>