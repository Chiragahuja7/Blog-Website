<div class="author">
  <h1 class="author__heading">Search Results</h1>
</div>

<section class="articles">
  <div class="row g-4">
    <% data.forEach(post => { %>
      <div class="col-md-4">
        <div class="card h-100 shadow-sm blog-card">
          <% if (post.image) { %>
            <img 
             src="<%= (Array.isArray(post.image) && post.image.length > 0) ? post.image[0] : '/image.png' %>" 
             alt="Blog image" 
             class="card-img-top" 
             style="max-height: 180px; object-fit: cover;">
          <% } %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= post.title %></h5>
            <% let textOnly = post.body.replace(/<[^>]*>/g,"");
               let excerpt = textOnly.split(" ").slice(0,30).join(" "); %>
            <p class="card-text"><%- excerpt %></p>
            <p class="card-text text-muted mb-2">
              <small><%= post.createdAt.toDateString() %></small>
            </p>
            <a href="/post/<%= post._id %>" class="stretched-link"></a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>
