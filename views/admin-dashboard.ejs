<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
   <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .dashboard-container {
      max-width: 1000px;
      margin: 80px auto;
    }
    .dashboard-card {
      cursor: pointer;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border-radius: 15px;
    }
    .dashboard-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
    }
    .card-body {
      text-align: center;
      padding: 40px 20px;
    }
    .card-body h4 {
      font-weight: 600;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <div class="dashboard-container">
    <h2 class="mb-5 text-center fw-bold">Admin Dashboard</h2>

    <div class="row g-4">
      <!-- Blogs -->
      <div class="col-md-4">
        <div class="card dashboard-card border-primary" onclick="location.href='/dashboard'">
          <div class="card-body">
            <h4 class="text-primary">Blogs</h4>
          </div>
        </div>
      </div>

      <!-- Reader -->
      <div class="col-md-4">
        <div class="card dashboard-card border-success" onclick="location.href='/manage-reader'">
          <div class="card-body">
            <h4 class="text-success">Readers</h4>
          </div>
        </div>
      </div>

      <!-- Editor -->
      <div class="col-md-4">
        <div class="card dashboard-card border-warning" onclick="location.href='/manage-editor'">
          <div class="card-body">
            <h4 class="text-warning">Editors</h4>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
