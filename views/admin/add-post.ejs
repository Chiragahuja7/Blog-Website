<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Post</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/jodit/build/jodit.min.css">
</head>
<body class=" align-items-center justify-content-center vh-100">

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6">
        <div class="card shadow-lg p-4 rounded-4">
          <a href="/dashboard" class="mb-3 d-inline-block">&larr; Back</a>
          <h3 class="text-center mb-4">Add New Post</h3>
          
          <form action="/add-post" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="title" class="form-label"><b>Title</b></label>
              <input type="text" class="form-control" id="title" name="title" placeholder="Post Title" required>
            </div>

            <div class="mb-3">
              <label for="category" class="form-label"><b>Category</b></label>
              <select class="form-select" id="category" name="category" required>
                <option value="" disabled selected>Select a category</option>
                <option value="technology">technology</option>
                <option value="lifestyle">lifestyle</option>
                <option value="travel">travel</option>
                <option value="food">food</option>
                <option value="AI">AI</option>
                <option value="animal">animal</option>
              </select>
            </div>

            <div class="mb-3">
              <label for="body" class="form-label"><b>Content</b></label>
              <textarea class="form-control" id="body" name="body" rows="5" placeholder="Write your post..." required></textarea>
            </div>

            <div class="mb-3">
              <label for="images" class="form-label"><b>Upload Images</b></label>
              <input type="file" class="form-control" id="images" name="images" multiple accept="image/*">
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg rounded-pill">Add</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jodit/build/jodit.min.js"></script>
  <script>
document.addEventListener("DOMContentLoaded", function () {
  const editor = new Jodit('#body', {
    height: 400,
    buttons: [
      'bold', 'italic', 'underline', '|',
      'ul', 'ol', '|',
      'link', 'image'
    ],
    uploader: {
      url: '/upload',
      insertImageAsBase64URI: false,
      format: 'json',

      process: function (resp) {
        if (resp && resp.success && resp.files && resp.files.length) {
          // Insert all uploaded images into the editor
          resp.files.forEach(file => {
            editor.selection.insertHTML(`<img src="${file}" style="max-width:50%; margin:5px 0;">`);
          });

          // Return first file for Jodit internal tracking
          return {
            path: '',
            error: 0
          };
        }

        return { error: 1 };
      }
    },

    events: {
      afterUpload: function (data) {
        console.log('Jodit uploaded:', data);
      }
    }
  });
});
  </script>

</body>
</html>
