<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Block/Unblock</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-light">

  <div class="container py-3">
    <h2 class="mb-4 text-center">Manage Readers</h2>

    <div class="row">
      <% data.forEach(user => { %>
        <% if(user.isAdmin) return; %>
        <% if(user.userType === 'reader'){%>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title"><%= user.firstname %> <%= user.lastname %></h5>
              <p class="card-text mb-1"><strong>Email:</strong> <%= user.email %></p>
              <p class="card-text">
                <span class="badge <%= user.isBlocked ? 'bg-danger' : 'bg-success' %>">
                  <%= user.isBlocked ? 'Blocked' : 'Active' %>
                </span>
              </p>

              <% if (user.isBlocked) { %>
                <form action="/unblock-reader/<%= user._id %>" method="POST">
                  <button type="submit" class="btn btn-success w-100">Unblock</button>
                </form>
              <% } else { %>
                <form action="/block-reader/<%= user._id %>" method="POST">
                  <button type="submit" class="btn btn-danger w-100">Block</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
        <%}%>
      <% }); %>
      
    </div>
  </div>

  <!-- Bootstrap JS (optional for better UI) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
