<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">    
  <script src="https://kit.fontawesome.com/edaf3a0e34.js" crossorigin="anonymous"></script>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
<div class="d-flex align-items-center justify-content-between mb-4">
  <h1 class="fw-bold">My Space</h1>
  
  <div class="d-flex gap-3">
    <a href="/add-blog" 
       class="btn btn-success rounded-circle shadow-lg d-flex align-items-center justify-content-center add-btn"
       title="Add Blog">
      <span class="fs-3 fw-bold">+</span>
    </a>

    <a href="/order-history" 
       class="btn btn-primary rounded-circle shadow-lg d-flex align-items-center justify-content-center history-btn"
       title="Order History">
      <i class="fas fa-history fs-4"></i>
    </a>
  </div>
</div>

<section class="articles container my-4">
  <div class="row g-4">
    <% data.forEach(post => { %>
      <div class="col-md-4">
        <div class="card h-100 shadow-sm blog-card">
          <% if (post.image) { %>
            <% if (Array.isArray(post.image)) { %>
              <img src="<%= post.image[0] %>" alt="Blog image" 
                   class="card-img-top mb-2"
                   style="max-height: 180px; object-fit: cover;">
            <% } else { %>
              <img src="<%= post.image %>" alt="Blog image" 
                   class="card-img-top mb-2"
                   style="max-height: 180px; object-fit: cover;">
            <% } %>
          <% } %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-semibold"><%= post.title %></h5>
            <% let textOnly = post.body.replace(/<[^>]*>/g, ""); %>
            <% let excerpt = textOnly.split(" ").slice(0, 30).join(" "); %>
            <p class="card-text"><%- excerpt %></p>
            
            <p class="card-text text-muted mb-2 mt-auto">
              <small><%= post.createdAt.toDateString() %></small>
            </p>
            <a href="/editor/post/<%= post._id %>" class="stretched-link"></a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

 <div class="pagination-wrapper">
  <ul class="pagination">
    <% if (current > 1) { %>
      <li>
        <a class="page-link" href="/editor/?page=<%= current - 1 %>">&laquo; Prev</a>
      </li>
    <% } %>

    <% pages.forEach(p => { %>
      <li class="<%= p === current ? 'active' : '' %>">
        <a class="page-link" href="/editor/?page=<%= p %>"><%= p %></a>
      </li>
    <% }) %>

    <% if (current < totalPages) { %>
      <li>
        <a class="page-link" href="/editor/?page=<%= current + 1 %>">Next &raquo;</a>
      </li>
    <% } %>
  </ul>
</div>
</section>
    <%if (typeof success !== 'undefined' && success === 'status'){%>
      <div class="alert alert-success alert-dismissible fade show text-center position-fixed top-0 start-50 translate-middle-x mt-3 w-50 shadow" role="alert">
      ✅ Post updated successfully!
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <%}%>
    <% if (typeof error !== 'undefined') { %>
  <div class="alert alert-danger alert-dismissible fade show text-center " role="alert">
    ❌ Something went wrong. Please try again.
  </div>
   <% } %>
  </div>
<script>
  setTimeout(() => {
    const alertEl = document.querySelector('.alert');
    if (alertEl) {
      const bsAlert = new bootstrap.Alert(alertEl);
      bsAlert.close();
    }
  }, 2000);
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

<!-- ✅ SweetAlert2 trigger -->
<% if (typeof error !== "undefined") { %>
<script>
  Swal.fire({
    icon: 'warning',
    title: 'Limit Reached',
    html: `<p><%= error %></p><a href="<%= upgradeLink %>" class="btn btn-primary mt-2">Upgrade Plan</a>`,
    showConfirmButton: false,
    allowOutsideClick: false
  });
</script>
<% } %>

</body>
</html>
