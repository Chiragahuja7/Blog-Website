<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">    
  <script src="https://kit.fontawesome.com/edaf3a0e34.js" crossorigin="anonymous"></script>

  <!-- ✅ SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
<div class="d-flex align-items-center justify-content-between mb-4">
  <h1 class="fw-bold">Your Space</h1>
  
  <div class="d-flex gap-3">
    <a href="/add-blog" 
       class="btn btn-success rounded-circle shadow-lg d-flex align-items-center justify-content-center add-btn"
       title="Add Blog">
      <span class="fs-3 fw-bold">+</span>
    </a>

    <a href="/order-history" 
       class="btn btn-primary rounded-circle shadow-lg d-flex align-items-center justify-content-center history-btn"
       title="Order History">
      <i class="fas fa-history fs-4"></i>
    </a>
  </div>
</div>

<section class="articles container my-4">
  <div class="row g-4">
    <% data.forEach(post => { %>
      <div class="col-md-4">
        <div class="card h-100 shadow-sm blog-card">
          <% if (post.image) { %>
            <% if (Array.isArray(post.image)) { %>
              <img src="<%= post.image[0] %>" alt="Blog image" 
                   class="card-img-top mb-2"
                   style="max-height: 180px; object-fit: cover;">
            <% } else { %>
              <img src="<%= post.image %>" alt="Blog image" 
                   class="card-img-top mb-2"
                   style="max-height: 180px; object-fit: cover;">
            <% } %>
          <% } %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-semibold"><%= post.title %></h5>
            <% let textOnly = post.body.replace(/<[^>]*>/g, ""); %>
            <% let excerpt = textOnly.split(" ").slice(0, 30).join(" "); %>
            <p class="card-text"><%- excerpt %></p>
            
            <p class="card-text text-muted mb-2 mt-auto">
              <small><%= post.createdAt.toDateString() %></small>
            </p>
            <a href="editor/post/<%= post._id %>" class="stretched-link"></a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <div class="text-center mt-4">
    <% if (prevPage !== null) { %>
      <a href="/editor/?page=<%= prevPage %>" class="btn btn-primary me-2">
        &lt; Newer Posts
      </a>
    <% } %>

    <% if (nextPage !== null) { %>
      <a href="/editor/?page=<%= nextPage %>" class="btn btn-primary">
        Older Posts &gt;
      </a>
    <% } %>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

<!-- ✅ SweetAlert2 trigger -->
<% if (typeof error !== "undefined") { %>
<script>
  Swal.fire({
    icon: 'warning',
    title: 'Limit Reached',
    html: `<p><%= error %></p><a href="<%= upgradeLink %>" class="btn btn-primary mt-2">Upgrade Plan</a>`,
    showConfirmButton: false,
    allowOutsideClick: false
  });
</script>
<% } %>

</body>
</html>
