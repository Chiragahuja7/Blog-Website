<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">    
</head>
<body>
    <h1>Your Space</h1>
    <a href="/add-blog" class="btn fs-4 btn-primary">+</a>
<section class="articles container my-4">
    <div class="row g-4">
    <% data.forEach(post => { %>
      <% if (post.status === "approved") { %>
      <div class="col-md-4">
        <div class="card h-100 shadow-sm blog-card">
         <% if (post.image) { %>
           <% if (Array.isArray(post.image)) { %>
             <img src="<%= post.image[0] %>" alt="Blog image" 
                  class="card-img-top mb-2"
                  style="max-height: 180px; object-fit: cover;">
           <% } else { %>
             <img src="<%= post.image %>" alt="Blog image" 
                  class="card-img-top mb-2"
                  style="max-height: 180px; object-fit: cover;">
           <% } %>
         <% } %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-semibold"><%= post.title %></h5>
            <p class="card-text">
              <%= post.body.split(" ").slice(0, 30).join(" ") %>...
            </p>
            <p class="card-text text-muted mb-2 mt-auto">
              <small><%= post.createdAt.toDateString() %></small>
            </p>
             <a href="editor/post/<%= post._id %>" class="stretched-link"></a>

          </div>
        </div>
      </div>
    <% }}) %>
  </div>
  <% if (nextPage !== null) { %>
    <div class="text-center mt-4">
      <a href="/?page=<%= nextPage %>" class="btn btn-outline-secondary">
        &lt; View Older Posts
      </a>
    </div>
  <% } %>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>