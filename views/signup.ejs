<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="/css/style.css">
    <script type="text/javascript" defer src="/js/script.js"></script>
</head>
<body>
    <div class="signup-container">
        <h2>Sign Up</h2>
        <form action="/signup" method="POST" class="signup-form">
            <div class="form-group">
                <label for="firstname">First Name:</label>
                <input type="text" id="firstname" name="firstname" required>
            </div>
            <div class="form-group">
                <label for="lastname">Last Name:</label>
                <input type="text" id="lastname" name="lastname" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <div class="userType-group">
            <label>
              <input type="radio" name="userType" value="reader" checked <%= data && data.userType === 'reader' ? 'checked' : '' %>>
              Reader
            </label>
            <label>
              <input type="radio" name="userType" value="editor" <%= data && data.userType === 'editor' ? 'checked' : '' %>>
              Editor
            </label>
          </div>
            <button type="submit" class="btn btn-primary signup-button">Submit</button>
            <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
            <% } %>
        </form>
<script>
  setTimeout(() => {
    const alertEl = document.querySelector('.alert');
    if (alertEl) {
      const bsAlert = new bootstrap.Alert(alertEl);
      bsAlert.close();
    }
  }, 2000);
</script>
</body>
</html>